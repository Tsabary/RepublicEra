<resources>

    <!-- Base application theme. -->
    <style name="AppTheme"
           parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/gray300</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:titleTextColor">@color/gray900</item>
        <item name="android:textColor">@color/gray900</item>
        <item name="android:textColorSecondary">@color/white</item>

    </style>

    <style name="uCropStyle"
           parent="@style/Theme.AppCompat.Light.NoActionBar">

        <item name="android:colorPrimary">@color/mainColor700</item>
        <item name="android:colorAccent">@color/mainColor700</item>
        <item name="android:colorBackground">@color/mainColor700</item>
        <item name="android:colorPrimaryDark">@color/mainColor700</item>

    </style>

    <style name="RatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="colorControlNormal">@color/gray300</item>
        <item name="colorControlActivated">@color/star_yellow</item>
    </style>

    <style name="RatingBarFixed" parent="Widget.AppCompat.RatingBar.Indicator">
        <item name="colorControlNormal">@color/gray300</item>
        <item name="colorControlActivated">@color/star_yellow</item>
    </style>


    <style name="MyActionBar"
           parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/white</item>
        <item name="android:titleTextColor">@color/black</item>
    </style>


    <style name="ChipSelectedStyle">
        <item name="android:textColor">@color/gray500</item>
        <item name="android:textSize">15sp</item>

    </style>


    <style name="local_image_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">26dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:paddingLeft">8dp</item>
    </style>


    <style name="AlgoliaSearchView" parent="Widget.AppCompat.Light.SearchView" >
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray500</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">stateHidden|adjustResize</item>
    </style>








</resources>
