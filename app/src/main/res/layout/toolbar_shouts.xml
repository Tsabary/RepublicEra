<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="16dp">

    <ImageButton
            android:src="@drawable/hamburger_menu"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/toolbar_shouts_menu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintDimensionRatio="1:1"
            android:scaleType="center"
            android:contentDescription="@string/menu_icon"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="All"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar_shouts_all"
            android:textSize="18sp"
            android:fontFamily="@font/montserrat_bold"
            app:layout_constraintTop_toTopOf="@+id/toolbar_shouts_menu"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar_shouts_menu"
            app:layout_constraintStart_toEndOf="@+id/toolbar_shouts_menu"
            android:layout_marginStart="24dp"
            android:textColor="@color/gray800"/>
    <TextView
            android:text="Following"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar_shouts_following"
            android:textSize="18sp"
            android:fontFamily="@font/montserrat_bold"
            app:layout_constraintTop_toTopOf="@+id/toolbar_shouts_menu"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar_shouts_menu"
            app:layout_constraintStart_toEndOf="@id/toolbar_shouts_all"
            android:textColor="@color/gray300"
            android:layout_marginStart="8dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>


