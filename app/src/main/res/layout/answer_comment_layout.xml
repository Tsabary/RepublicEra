<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray100">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="1dp"
            android:background="@color/white"
            android:id="@+id/constraintLayout4">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/answer_comment_removed_filler_box"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="#B3FFFFFF"
                android:elevation="1dp"
                android:visibility="gone">

            <TextView
                    android:text="@string/comment_removed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/answer_comment_removed_filler"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginEnd="32dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:visibility="gone"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/answer_comment_delete_box"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@color/white"
                android:elevation="1dp"
                android:visibility="gone">

            <TextView
                    android:text="@string/remove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/answer_comment_remove"
                    app:layout_constraintTop_toTopOf="@+id/answer_comment_cancel"
                    app:layout_constraintBottom_toBottomOf="@+id/answer_comment_cancel"
                    app:layout_constraintStart_toEndOf="@+id/answer_comment_cancel"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textColor="@color/red700"
                    android:fontFamily="@font/roboto_medium"/>
            <TextView
                    android:text="@android:string/cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/answer_comment_cancel"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toStartOf="@+id/answer_comment_remove"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/answer_comment_delete_message"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="16dp"

                    android:textColor="@color/gray500"
                    android:fontFamily="@font/roboto_medium"/>
            <TextView
                    android:text="@string/are_you_sure_you_want_to_delete_this_answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/answer_comment_delete_message"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginEnd="32dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/roboto_bold"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:id="@+id/answer_comment_author_image"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="60dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/answer_comment_author_name"
                app:layout_constraintTop_toTopOf="@+id/answer_comment_author_image"
                tools:text="User name"
                android:fontFamily="@font/roboto_bold"
                app:layout_constraintStart_toEndOf="@+id/answer_comment_author_image"
                android:layout_marginStart="16dp"
                android:textColor="@color/gray800"
                android:textSize="15sp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/answer_comment_author_reputation"
                app:layout_constraintStart_toEndOf="@+id/answer_comment_author_name"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/answer_comment_author_name"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/gray500"
                tools:text="(0)"
                android:textSize="15sp"
                android:visibility="gone"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/answer_comment_comment"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/answer_comment_author_name"
                app:layout_constraintStart_toStartOf="@+id/answer_comment_author_name"
                tools:text="User comment"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="32dp"
                app:layout_constraintHorizontal_bias="0.0"
                android:textColor="@color/gray800"
                android:textSize="15sp"
                android:fontFamily="@font/roboto_medium"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/answer_comment_comment_editable"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/answer_comment_author_name"
                app:layout_constraintStart_toStartOf="@+id/answer_comment_author_name"
                tools:text="User comment"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="32dp"
                app:layout_constraintHorizontal_bias="0.0"
                android:textColor="@color/gray800"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toTopOf="@+id/answer_comment_actions"
                android:visibility="gone"
                android:textSize="15sp"
                android:background="@android:color/transparent"
                android:inputType="textCapSentences"/>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/answer_comment_actions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="@+id/answer_comment_timestamp"
                app:layout_constraintStart_toEndOf="@+id/answer_comment_timestamp"
                android:layout_marginStart="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="32dp"
                app:layout_constraintHorizontal_bias="1.0">

            <TextView
                    android:text="@string/delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/answer_comment_delete"
                    android:textColor="@color/gray500"
                    android:fontFamily="@font/roboto_medium"
                    android:visibility="visible"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
            />
            <TextView
                    android:text="@string/edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/answer_comment_edit"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/answer_comment_delete"
                    android:textColor="@color/gray500"
                    android:fontFamily="@font/roboto_medium"
                    android:visibility="visible"
                    android:layout_marginStart="16dp"/>
            <TextView
                    android:text="@string/save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/answer_comment_save"
                    android:textColor="@color/gray500"
                    android:fontFamily="@font/roboto_medium"
                    android:visibility="gone"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="56dp"
                    app:layout_constraintVertical_bias="0.157"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
                tools:text="yesterday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/answer_comment_timestamp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/gray500"
                android:textSize="15sp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/answer_comment_comment"
                app:layout_constraintStart_toStartOf="@+id/answer_comment_comment"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>