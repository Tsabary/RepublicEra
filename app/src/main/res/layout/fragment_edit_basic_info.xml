<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.EditBasicInfoFragment"
        android:padding="24dp"
        android:background="@color/white">


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:text="This information would be used as default when you create new profiles, and can always be edited"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/edit_basic_information_message"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/gray500"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/edit_basic_information_headline"
                    android:layout_marginStart="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="24dp"/>
            <TextView
                    android:text="@string/first_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/edit_basic_information_first_name_headline"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/gray800"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edit_basic_information_message"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="32dp"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="First name"
                    android:ems="10"
                    android:id="@+id/edit_basic_information_first_name_input"
                    android:background="@drawable/button_curve_8_gray"
                    android:textSize="15sp"
                    android:textColor="@color/gray500"
                    app:layout_constraintTop_toBottomOf="@+id/edit_basic_information_first_name_headline"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:fontFamily="@font/roboto"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                    android:text="Edit basic \ninformation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/edit_basic_information_headline"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="@color/gray800"
                    android:textSize="24sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="Last name"
                    android:ems="10"
                    android:id="@+id/edit_basic_information_last_name_input"
                    android:background="@drawable/button_curve_8_gray"
                    android:textSize="15sp"
                    android:textColor="@color/gray500"
                    app:layout_constraintTop_toBottomOf="@+id/edit_basic_information_last_name_headline"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:fontFamily="@font/roboto"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/edit_basic_info_save"
                    android:layout_marginBottom="32dp"
                    app:layout_constraintVertical_bias="0.0"/>
            <TextView
                    android:text="@string/last_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/edit_basic_information_last_name_headline"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/gray800"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@+id/edit_basic_information_first_name_input"
                    android:layout_marginStart="18dp"/>
            <TextView
                    android:id="@+id/edit_basic_info_save"
                    android:text="@string/save"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:fontFamily="@font/roboto_medium"
                    android:background="@drawable/button_curve_16_500"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="16dp"
                    android:elevation="4dp"
            />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>