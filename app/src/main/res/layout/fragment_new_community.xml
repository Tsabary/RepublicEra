<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.NewCommunityFragment"
        android:padding="24dp"
        android:background="@color/white">


    <TextView
            android:text="Once the republic has opened, none of these details can be changed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/new_community_headline"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/gray500"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/new_community_headline_mssage"
            app:layout_constraintEnd_toEndOf="parent"
    />
    <TextView
            android:text="Start a new \nrepublic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/new_community_headline_mssage"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/gray800"
            android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
    />


    <EditText
            android:id="@+id/new_community_description_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/gray_form_field"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textColor="@color/gray700"
            android:textSize="14sp"
            android:fontFamily="@font/roboto"
            android:hint="@string/describe_the_republic_briefly"
            android:maxLines="4"
            android:maxLength="150"
            android:inputType="textMultiLine|textCapSentences"
            android:ems="10"
            android:scrollHorizontally="false"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/new_community_title_input"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.333"
            android:minLines="3"
            android:gravity="top"/>
    <EditText
            android:id="@+id/new_community_title_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/gray_form_field"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textColor="@color/gray700"
            android:textSize="14sp"
            android:fontFamily="@font/roboto"
            android:hint="@string/name_your_new_community"
            android:maxLines="1"
            android:maxLength="35"
            android:inputType="textMultiLine|textCapSentences"
            android:ems="10"
            android:scrollHorizontally="false"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/new_community_headline"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/new_community_description_input"
            android:layout_marginTop="24dp"
            android:checkedButton="@id/new_community_public">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        >

            <RadioButton
                    android:text="Public"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/new_community_public"
                    android:fontFamily="@font/roboto_medium"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
            <RadioButton
                    android:text="Closed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/new_community_private"
                    android:layout_weight="1"
                    app:layout_constraintStart_toEndOf="@+id/new_community_public"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </RadioGroup>
    <TextView
            android:text="Start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/new_community_start_button"
            app:layout_constraintBottom_toBottomOf="parent"
            android:fontFamily="@font/montserrat_bold"
            app:layout_constraintEnd_toEndOf="parent"
    />

</androidx.constraintlayout.widget.ConstraintLayout>