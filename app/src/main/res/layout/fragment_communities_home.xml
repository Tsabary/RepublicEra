<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.CommunitiesHome"
        android:background="@color/white"
        android:clickable="true">


    <TextView
            android:text="Your republics"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/communities_home_your_communities"
            android:textSize="14sp"
            android:textColor="@color/gray500"
            android:fontFamily="@font/montserrat"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/communities_home_header_container"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/communities_home_header_container"
            android:padding="24dp"
            app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/communities_home_header_buttons_container"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="160dp"
                android:visibility="gone">

            <ImageView
                    android:layout_width="48dp"
                    android:layout_height="0dp"
                    android:src="@drawable/settings_line"
                    app:layout_constraintDimensionRatio="h,1:1"
                    android:id="@+id/communities_home_settings_old"
                    app:layout_constraintStart_toEndOf="@+id/communities_home_search_old"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:padding="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            <ImageView
                    android:layout_width="48dp"
                    android:layout_height="0dp"
                    android:src="@drawable/explore"
                    android:id="@+id/communities_home_search_old"
                    app:layout_constraintDimensionRatio="h,1:1"
                    app:layout_constraintStart_toEndOf="@+id/communities_home_add_old"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toStartOf="@+id/communities_home_settings_old"
                    app:layout_constraintTop_toTopOf="@+id/communities_home_settings_old"
                    app:layout_constraintBottom_toBottomOf="@+id/communities_home_settings_old"
                    android:padding="16dp"/>
            <ImageView
                    android:layout_width="48dp"
                    android:layout_height="0dp"
                    android:src="@drawable/plus_basic"
                    android:id="@+id/communities_home_add_old"
                    app:layout_constraintDimensionRatio="h,1:1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintEnd_toStartOf="@+id/communities_home_search_old"
                    app:layout_constraintTop_toTopOf="@+id/communities_home_search_old"
                    app:layout_constraintBottom_toBottomOf="@+id/communities_home_search_old"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    android:padding="16dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
                tools:text="Friend."
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/communities_home_name"
                android:textSize="24sp"
                android:textColor="@color/gray800"
                android:fontFamily="@font/montserrat_bold"
                app:layout_constraintEnd_toStartOf="@+id/communities_home_header_buttons_container"
                android:layout_marginTop="160dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:visibility="gone"/>
        <TextView
                android:text="New"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/communities_home_add"
                android:fontFamily="@font/montserrat_bold"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:textSize="18sp"
                android:textColor="@color/gray800"/>
        <TextView
                android:text="Explore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/communities_home_search"
                android:fontFamily="@font/montserrat_bold"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                android:textSize="18sp"
                android:textColor="@color/gray800"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="visible"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/communities_home_your_communities"
            android:background="@color/white">

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/communities_home_recycler"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/cardView"
                android:layout_marginTop="32dp"/>
        <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="32dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp"
                android:id="@+id/cardView">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp">

                <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/editText"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/montserrat"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="8dp"
                        android:hint="Search"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:textSize="15sp"
                        app:layout_constraintStart_toEndOf="@+id/imageView5"/>
                <ImageView
                        android:src="@drawable/search"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:id="@+id/imageView5"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
            android:text="Oh hi!"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/communities_home_empty_message"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/communities_home_your_communities"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:visibility="gone"
            android:textSize="30sp"
            android:textColor="@color/gray800"
            android:layout_marginBottom="32dp"/>
    <TextView
            android:text="Click 'explore' to discover your favorite new republics, or click 'new' to create your own!"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/communities_home_empty_message2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/communities_home_empty_message"
            app:layout_constraintVertical_bias="0.0"
            android:textSize="18sp"
            android:textColor="@color/gray500"/>

</androidx.constraintlayout.widget.ConstraintLayout>