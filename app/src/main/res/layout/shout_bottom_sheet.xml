<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/white">


        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine|textCapSentences"
                android:ems="10"
                android:id="@+id/shouts_bottom_sheet_input"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/button_curve_8_gray"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textColor="@color/gray700"
                android:textSize="15sp"
                android:fontFamily="@font/roboto"
                android:hint="@string/anything_you_want_to_say"
                android:maxLines="4"
                android:maxLength="2000"
                android:scrollHorizontally="false"/>
        <TextView
                android:text="@string/shout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/shouts_bottom_sheet_shout_button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="15sp"
                android:textColor="@color/gray700"
                android:fontFamily="@font/roboto_bold"
                android:layout_marginBottom="24dp"
                android:visibility="gone"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/shouts_bottom_sheet_card"
                android:layout_marginEnd="8dp"/>
        <TextView
                android:text="@string/remove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/shouts_bottom_sheet_remove_image"
                android:elevation="2dp"
                app:layout_constraintBottom_toBottomOf="@+id/shouts_bottom_sheet_card"
                app:layout_constraintEnd_toEndOf="@+id/shouts_bottom_sheet_card"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/button_curve_8_gray"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/gray800"
                android:paddingTop="8dp"
                android:visibility="gone"/>
        <ProgressBar
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/shouts_bottom_sheet_progress"
                android:elevation="2dp"
                app:layout_constraintEnd_toEndOf="@+id/shouts_bottom_sheet_card"
                app:layout_constraintStart_toStartOf="@+id/shouts_bottom_sheet_card"
                app:layout_constraintBottom_toBottomOf="@+id/shouts_bottom_sheet_card"
                app:layout_constraintTop_toTopOf="@+id/shouts_bottom_sheet_card"
                android:progressTint="@color/white"
                android:background="@android:color/transparent"
                android:visibility="gone"/>
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/shouts_bottom_sheet_input"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintDimensionRatio="4:3"
                android:id="@+id/shouts_bottom_sheet_card"
                app:cardElevation="0dp"
                app:cardCornerRadius="16dp"
                android:visibility="gone">

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintDimensionRatio="4:3"
                    android:id="@+id/shouts_bottom_sheet_image"
                    android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>


        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/gallery"
                android:id="@+id/shouts_bottom_sheet_add_image"
                android:background="@android:color/transparent"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/shouts_bottom_sheet_card"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="24dp"
                app:layout_constraintStart_toStartOf="parent"
                android:visibility="gone"
                android:layout_marginStart="8dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>