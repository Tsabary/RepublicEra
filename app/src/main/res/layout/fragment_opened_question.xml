<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.OpenedQuestionFragment"
        android:background="@color/gray100">

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/opened_question_box"
                        android:background="@color/white"
                        android:elevation="2dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">


                    <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            app:civ_border_color="#424242"
                            app:civ_border_width="0dp"
                            android:id="@+id/opened_question_author_image"
                            android:layout_marginTop="32dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="24dp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/opened_question_author_name"
                            app:layout_constraintStart_toEndOf="@+id/opened_question_author_image"
                            android:layout_marginStart="24dp"
                            app:layout_constraintTop_toTopOf="@+id/opened_question_author_image"
                            tools:text="Author Name"
                            android:fontFamily="@font/roboto_bold"
                            android:textSize="15sp"
                    />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/opened_question_author_reputation"
                            app:layout_constraintBottom_toBottomOf="@+id/opened_question_author_name"
                            tools:text="(24)"
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="@color/gray500"
                            app:layout_constraintStart_toEndOf="@+id/opened_question_author_name"
                            app:layout_constraintTop_toTopOf="@+id/opened_question_author_name"
                            android:textSize="15sp"
                            android:layout_marginStart="8dp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/opened_question_timestamp"
                            app:layout_constraintTop_toBottomOf="@+id/opened_question_author_name"
                            android:textColor="@color/gray500"
                            tools:text="Timestamp"
                            android:fontFamily="@font/roboto_medium"
                            android:textSize="15sp"
                            app:layout_constraintStart_toStartOf="@+id/opened_question_author_name"
                            app:layout_constraintBottom_toBottomOf="@+id/opened_question_author_image"/>
                    <ImageButton
                            android:src="@drawable/menu"
                            android:layout_width="0dp"
                            android:layout_height="16dp"
                            android:id="@+id/opened_question_options_button"
                            android:background="@android:color/transparent"
                            android:visibility="visible"
                            android:scaleType="centerInside"
                            android:padding="16dp"
                            app:layout_constraintEnd_toEndOf="@+id/opened_question_upvote"
                            app:layout_constraintTop_toTopOf="@+id/opened_question_author_image"
                            app:layout_constraintBottom_toBottomOf="@+id/opened_question_author_image"
                            app:layout_constraintStart_toStartOf="@+id/opened_question_upvote"
                            android:contentDescription="@string/menu_icon"/>
                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/opened_question_title"
                            android:textColor="@color/gray900"
                            android:textStyle="bold"
                            android:lineSpacingExtra="4sp"
                            android:textSize="18sp"
                            android:layout_marginStart="24dp"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginEnd="24dp"
                            tools:text="title"
                            android:fontFamily="@font/roboto_bold"
                            app:layout_constraintTop_toBottomOf="@+id/opened_question_author_image"
                            android:layout_marginTop="32dp"
                            app:layout_constraintEnd_toStartOf="@+id/opened_question_upvote"/>
                    <ImageButton
                            app:srcCompat="@drawable/arrow_up_default"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/opened_question_upvote"
                            app:layout_constraintBottom_toTopOf="@+id/opened_question_votes"
                            app:layout_constraintVertical_chainStyle="packed"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="20dp"
                            android:background="@android:color/transparent"
                            android:padding="4dp"
                            app:layout_constraintTop_toTopOf="@+id/opened_question_title"
                            android:contentDescription="@string/upvote_button"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/opened_question_votes"
                            android:textSize="18sp"
                            app:layout_constraintStart_toStartOf="@+id/opened_question_upvote"
                            app:layout_constraintEnd_toEndOf="@+id/opened_question_upvote"
                            app:layout_constraintTop_toBottomOf="@+id/opened_question_upvote"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintBottom_toTopOf="@+id/opened_question_downvote"
                            android:text="@string/_0"
                            android:fontFamily="@font/roboto_medium"/>
                    <ImageButton
                            app:srcCompat="@drawable/arrow_down_default"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/opened_question_downvote"
                            app:layout_constraintStart_toStartOf="@+id/opened_question_votes"
                            app:layout_constraintEnd_toEndOf="@+id/opened_question_votes"
                            app:layout_constraintTop_toBottomOf="@+id/opened_question_votes"
                            app:layout_constraintHorizontal_bias="0.5"
                            android:background="@android:color/transparent"
                            android:padding="4dp"
                            android:contentDescription="@string/downvote_button"/>
                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/opened_question_content"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="24dp"
                            android:layout_marginEnd="24dp"
                            app:layout_constraintHorizontal_bias="0.0"
                            android:textColor="@color/gray900"
                            android:lineSpacingExtra="4sp"
                            android:textSize="15sp"
                            tools:text="content"
                            android:fontFamily="@font/roboto_medium"
                            app:layout_constraintTop_toBottomOf="@+id/opened_question_downvote"
                            android:layout_marginTop="24dp"
                            app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/opened_question_tags"
                            app:layout_constraintStart_toStartOf="@+id/opened_question_content"
                            android:layout_marginTop="24dp"
                            app:layout_constraintTop_toBottomOf="@id/opened_question_content"
                            android:textColor="@color/gray500"
                            app:layout_constraintHorizontal_bias="0.0"
                            tools:text="tags, tags, tags"
                            android:fontFamily="@font/roboto_medium"
                            android:textSize="15sp"
                            app:layout_constraintEnd_toEndOf="@+id/opened_question_content"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginBottom="24dp"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:id="@+id/opened_question_delete_box"
                            android:background="#FFFFFF"
                            android:elevation="2dp"
                            android:visibility="gone"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent">


                        <TextView
                                android:text="@string/remove"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/opened_question_remove"
                                app:layout_constraintTop_toTopOf="@+id/opened_question_cancel"
                                app:layout_constraintBottom_toBottomOf="@+id/opened_question_cancel"
                                app:layout_constraintStart_toEndOf="@+id/opened_question_cancel"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:textColor="@color/red700"
                                android:fontFamily="@font/roboto_medium"/>
                        <TextView
                                android:text="@android:string/cancel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/opened_question_cancel"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintEnd_toStartOf="@+id/opened_question_remove"
                                android:layout_marginTop="16dp"
                                app:layout_constraintTop_toBottomOf="@+id/opened_question_delete_message"
                                android:textColor="@color/gray500"
                                android:fontFamily="@font/roboto_medium"/>
                        <TextView
                                android:text="@string/are_you_sure_you_want_to_delete_this_post"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/opened_question_delete_message"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_marginEnd="32dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginStart="32dp"
                                app:layout_constraintVertical_bias="0.45"
                                android:fontFamily="@font/roboto_bold"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/opened_question_answer_container"
                        app:layout_constraintTop_toBottomOf="@+id/opened_question_box"
                        android:background="@color/white"
                        android:layout_marginTop="32dp"
                        android:elevation="2dp">

                    <TextView
                            android:text="@string/answer"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/opened_question_answer_btn"
                            android:textAlignment="center"
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="@color/gray500"
                            android:background="@drawable/buttons_shape"
                            android:padding="16dp"
                            android:gravity="center"
                            android:textSize="15sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="24dp"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="24dp"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="24dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginBottom="24dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:layout_editor_absoluteX="0dp"
                        android:id="@+id/opened_question_answers_recycler"
                        app:layout_constraintTop_toBottomOf="@+id/opened_question_answer_container"
                        android:layout_marginBottom="72dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="32dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>