<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.AnswerFragment"
        android:background="@color/white">

    <EditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:id="@+id/answer_content"
            app:layout_constraintStart_toStartOf="parent"
            android:backgroundTint="@android:color/transparent"
            android:layout_marginStart="32dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="24dp"
            android:hint="@string/your_answer"
            app:layout_constraintTop_toBottomOf="@+id/answer_photos_recycler"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/answer_btn"
            android:textSize="15sp"
            android:fontFamily="@font/roboto_medium"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:gravity="center"
            android:text=""
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/answer_btn"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="32dp"
            android:textAlignment="center"
            android:textSize="15sp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/gray500"
            android:background="@drawable/buttons_shape"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginBottom="104dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="16dp"
            app:layout_constraintEnd_toStartOf="@+id/answer_add_photos_button"/>
    <ImageButton
            android:src="@drawable/gallery"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/answer_add_photos_button"
            android:background="@drawable/buttons_shape"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            app:layout_constraintBottom_toBottomOf="@+id/answer_btn"
            app:layout_constraintTop_toTopOf="@+id/answer_btn"
            app:layout_constraintDimensionRatio="1:1"
            android:contentDescription="@string/add_image"
            android:visibility="gone"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/answer_photos_recycler"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toStartOf="@+id/answer_add_photos_button"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>