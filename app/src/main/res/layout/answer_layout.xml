<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray100">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="24dp"
            android:background="@color/white"
            android:elevation="2dp">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/single_answer_delete_box"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/divider8"
                android:background="@color/white"
                android:elevation="1dp"
                android:visibility="gone">

            <TextView
                    android:text="@string/remove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/single_answer_remove"
                    app:layout_constraintTop_toTopOf="@+id/single_answer_cancel"
                    app:layout_constraintBottom_toBottomOf="@+id/single_answer_cancel"
                    app:layout_constraintStart_toEndOf="@+id/single_answer_cancel"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textColor="@color/red700"
                    android:fontFamily="@font/roboto_medium"/>
            <TextView
                    android:text="@android:string/cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/single_answer_cancel"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toStartOf="@+id/single_answer_remove"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/single_answer_delete_message"
                    android:textColor="@color/gray500"
                    android:fontFamily="@font/roboto_medium"/>
            <TextView
                    android:text="@string/are_you_sure_you_want_to_delete_this_answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/single_answer_delete_message"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginEnd="32dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="32dp"
                    app:layout_constraintVertical_bias="0.45"
                    android:fontFamily="@font/roboto_bold"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/single_answer_content"
                android:textColor="@color/gray900"
                android:lineSpacingExtra="4sp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="24dp"
                android:layout_marginStart="24dp"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="16sp"
                android:layout_marginEnd="24dp"
                app:layout_constraintEnd_toStartOf="@+id/single_answer_votes"
                tools:text="random text fdsdfsdfsdfsdf"
                android:fontFamily="@font/roboto_medium"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/single_answer_timestamp"
                android:textColor="@color/gray500"
                app:layout_constraintStart_toStartOf="@+id/single_answer_content"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/single_answer_photos_recycler"
                tools:text="Added 4 hours ago"
                android:fontFamily="@font/roboto_medium"/>
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/single_answer_content"
                app:layout_constraintEnd_toStartOf="@+id/single_answer_downvote"
                android:layout_marginEnd="24dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp"
                android:id="@+id/single_answer_photos_recycler"
                android:visibility="gone"/>
        <ImageButton
                app:srcCompat="@drawable/arrow_up_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/single_answer_upvote"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/single_answer_votes"
                app:layout_constraintVertical_chainStyle="spread"
                app:layout_constraintEnd_toEndOf="@+id/single_answer_votes"
                app:layout_constraintStart_toStartOf="@+id/single_answer_votes"
                android:background="@android:color/transparent"
                android:layout_marginTop="20dp"
                android:padding="4dp"
                android:contentDescription="@string/upvote_button"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/single_answer_votes"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/single_answer_upvote"
                app:layout_constraintBottom_toTopOf="@+id/single_answer_downvote"
                app:layout_constraintEnd_toEndOf="@+id/single_answer_downvote"
                app:layout_constraintStart_toStartOf="@+id/single_answer_downvote"
                android:text="@string/_0"
                android:fontFamily="@font/roboto_medium"/>
        <ImageButton
                app:srcCompat="@drawable/arrow_down_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/single_answer_downvote"
                app:layout_constraintTop_toBottomOf="@+id/single_answer_votes"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="20dp"
                android:background="@android:color/transparent"
                android:padding="4dp"
                android:contentDescription="@string/downvote_button"/>
        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:civ_border_color="#424242"
                app:civ_border_width="0dp"
                android:id="@+id/single_answer_author_image"
                app:layout_constraintStart_toStartOf="@+id/single_answer_timestamp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/single_answer_timestamp"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/single_answer_author_name"
                app:layout_constraintStart_toEndOf="@+id/single_answer_author_image"
                android:layout_marginStart="24dp"
                app:layout_constraintTop_toTopOf="@+id/single_answer_author_image"
                tools:text="Author Name"
                android:fontFamily="@font/roboto_bold"
                app:layout_constraintBottom_toTopOf="@+id/single_answer_delete"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/single_answer_author_reputation"
                app:layout_constraintBottom_toBottomOf="@+id/single_answer_author_name"
                tools:text="(31)"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/gray500"
                app:layout_constraintStart_toEndOf="@+id/single_answer_author_name"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/single_answer_author_name"
                android:visibility="gone"/>
        <TextView
                android:text="@string/delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/single_answer_delete"
                app:layout_constraintStart_toStartOf="@+id/single_answer_author_name"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/gray500"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/single_answer_author_image"/>
        <TextView
                android:text="@string/edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/single_answer_edit"
                app:layout_constraintTop_toTopOf="@+id/single_answer_delete"
                app:layout_constraintBottom_toBottomOf="@+id/single_answer_delete"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toEndOf="@+id/single_answer_delete"
                android:textColor="@color/gray500"
                android:fontFamily="@font/roboto_medium"
                android:visibility="gone"/>
        <View
                android:id="@+id/divider8"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout19"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="24dp"/>
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/single_answer_comments_recycler"
                app:layout_constraintTop_toBottomOf="@+id/divider8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
        />
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/single_answer_author_image"
                android:id="@+id/constraintLayout19"
                android:background="@drawable/gray_form_field">

            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:gravity="start|top"
                    android:ems="10"
                    android:id="@+id/single_answer_comment_input"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toStartOf="@+id/single_answer_comment_button"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/roboto"
                    android:textSize="15sp"
                    android:textColor="@color/gray900"
                    android:hint="Comment on this answer.."/>
            <ImageButton
                    android:layout_width="16dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/send"
                    android:id="@+id/single_answer_comment_button"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="8dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>