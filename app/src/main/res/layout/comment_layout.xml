<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray100">

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:layout_height="wrap_content"
                                                       app:layout_constraintTop_toTopOf="parent"
                                                       app:layout_constraintBottom_toBottomOf="parent"
                                                       android:layout_marginBottom="8dp"
                                                       android:background="@color/white">


        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@color/white"
                android:elevation="1dp"
                android:id="@+id/single_comment_delete_container"
                android:visibility="gone">

            <TextView
                    android:text="@string/are_you_sure_you_want_to_delete_your_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/single_comment_delete_message"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="15sp"/>
            <TextView
                    android:text="@android:string/cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/single_comment_cancel"
                    android:layout_marginTop="32dp"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toStartOf="@+id/single_comment_remove"
                    app:layout_constraintTop_toBottomOf="@+id/single_comment_delete_message"
                    android:layout_marginBottom="24dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textColor="@color/gray500"
                    android:fontFamily="@font/roboto_medium"/>
            <TextView
                    android:text="@string/remove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/single_comment_remove"
                    android:textSize="15sp"
                    app:layout_constraintTop_toTopOf="@+id/single_comment_cancel"
                    app:layout_constraintBottom_toBottomOf="@+id/single_comment_cancel"
                    app:layout_constraintStart_toEndOf="@+id/single_comment_cancel"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textColor="@color/red700"
                    android:fontFamily="@font/roboto_medium"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/single_comment_photo"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp"
                android:layout_marginStart="28dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/single_comment_author"
                app:layout_constraintStart_toEndOf="@+id/single_comment_photo"
                android:layout_marginStart="32dp"
                android:fontFamily="@font/roboto_bold"
                tools:text="name name"
                app:layout_constraintTop_toTopOf="@+id/single_comment_photo"
                android:textColor="@color/gray800"
                android:textSize="15sp"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/single_comment_content"
                app:layout_constraintTop_toBottomOf="@+id/single_comment_author"
                android:layout_marginStart="32dp"
                app:layout_constraintStart_toEndOf="@+id/single_comment_photo"
                tools:text="comment comment comment"
                app:layout_constraintHorizontal_bias="0.0"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toStartOf="@+id/single_comment_like_button"
                android:textColor="@color/gray800"
                android:textSize="15sp"/>

        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/single_comment_content_editable"
                app:layout_constraintTop_toBottomOf="@+id/single_comment_content"
                android:layout_marginStart="32dp"
                app:layout_constraintStart_toEndOf="@+id/single_comment_photo"
                tools:text="comment comment comment"
                app:layout_constraintHorizontal_bias="0.0"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toStartOf="@+id/single_comment_like_button"
                android:textColor="@color/gray800"
                android:visibility="gone"
                android:textSize="15sp"
                android:background="@android:color/transparent"
                android:inputType="textCapSentences"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/single_comment_timestamp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/single_comment_content_editable"
                app:layout_constraintStart_toEndOf="@+id/single_comment_photo"
                android:layout_marginStart="32dp"
                tools:text="time time"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/gray500"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp"
                android:textSize="15sp"/>
        <ImageButton
                android:layout_width="16dp"
                android:layout_height="16dp"
                app:srcCompat="@drawable/heart"
                android:id="@+id/single_comment_like_button"
                android:background="@android:color/transparent"
                android:scaleType="centerCrop"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/single_comment_like_count"
                app:layout_constraintTop_toTopOf="@+id/single_comment_author"
                android:layout_marginTop="8dp"
                android:contentDescription="@string/comment_like"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/single_comment_like_count"
                tools:text="3"
                android:fontFamily="@font/roboto_medium"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="24dp"
                app:layout_constraintBottom_toBottomOf="@+id/single_comment_like_button"
                app:layout_constraintTop_toTopOf="@+id/single_comment_like_button"
                android:textColor="@color/gray700"
                android:textSize="15sp"/>

        <TextView
                android:text="@string/edit"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:id="@+id/single_comment_edit"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@color/gray500"
                android:visibility="gone"
                android:gravity="center_horizontal"
                android:textSize="15sp"
                android:fontFamily="@font/roboto_medium"/>

        <TextView
                android:text="@string/save"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:id="@+id/single_comment_save"
                app:layout_constraintEnd_toStartOf="@+id/single_comment_edit"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@color/green700"
                android:visibility="gone"
                android:gravity="center_horizontal"
                android:textSize="15sp"
                android:fontFamily="@font/roboto_medium"/>

        <TextView
                android:text="@string/delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/single_comment_delete"
                app:layout_constraintEnd_toStartOf="@+id/single_comment_save"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@color/gray500"
                android:visibility="gone"
                android:textSize="15sp"
                android:fontFamily="@font/roboto_medium"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/single_comment_author_reputation"
                app:layout_constraintStart_toEndOf="@+id/single_comment_author"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/single_comment_author"
                app:layout_constraintBottom_toBottomOf="@+id/single_comment_author"
                android:textColor="@color/gray500"
                tools:text="6"
                android:fontFamily="@font/roboto_medium"
                android:textSize="15sp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
