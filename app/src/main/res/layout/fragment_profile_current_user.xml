<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:backgroundTint="@color/white">


    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/profile_li_scrollview">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants">


            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:background="@color/white"
                    android:theme="?attr/actionBarTheme"
                    android:minHeight="?attr/actionBarSize"
                    android:id="@+id/profile_li_toolbar"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        app:srcCompat="@drawable/menu"
                        android:id="@+id/profile_li_menu_button"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:background="@android:color/transparent"
                        android:padding="16dp"
                        android:scaleType="centerInside"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/profile_li_image_container"
                    android:layout_width="116dp"
                    android:layout_height="116dp"
                    android:elevation="4dp"
                    android:background="@drawable/profile_photo_background"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="32dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/profile_li_toolbar"
>

                <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_li_image"
                        android:layout_width="112dp"
                        android:layout_height="112dp"
                        app:civ_border_color="@color/white"
                        app:civ_border_width="2dp"
                        android:src="@drawable/user_profile"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/profile_li_user_name"
                    tools:text="User name"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@+id/profile_li_image_container"
                    app:layout_constraintEnd_toEndOf="@+id/profile_li_image_container"
                    app:layout_constraintStart_toStartOf="@+id/profile_li_image_container"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="@color/gray800"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/profile_li_tagline"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/profile_li_user_name"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="48dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="48dp"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/gray500"
                    tools:text="tagline"
                    android:textAlignment="center"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/profile_li_staks_recycler"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/profile_li_tagline"
                    app:layout_constraintEnd_toEndOf="parent"
            />
            <View
                    android:id="@+id/divider"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/gray100"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/profile_li_staks_recycler"
                    android:layout_marginTop="32dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/profile_li_followers_count"
                    app:layout_constraintEnd_toEndOf="@+id/profile_li_followers_static"
                    app:layout_constraintStart_toStartOf="@+id/profile_li_followers_static"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/divider"
                    android:text="@string/_0"
                    android:textColor="@color/gray800"/>
            <TextView
                    android:text="@string/followers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/profile_li_followers_static"
                    android:textSize="11sp"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/gray500"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toStartOf="@+id/profile_li_reputation_static"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/profile_li_followers_count"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/profile_li_reputation_count"
                    app:layout_constraintEnd_toEndOf="@+id/profile_li_reputation_static"
                    app:layout_constraintStart_toStartOf="@+id/profile_li_reputation_static"
                    app:layout_constraintBottom_toBottomOf="@+id/profile_li_followers_count"
                    android:fontFamily="@font/roboto_black"
                    android:text="@string/_0"
                    android:textColor="@color/gray800"/>
            <TextView
                    android:text="@string/reputation"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:id="@+id/profile_li_reputation_static"
                    android:textColor="@color/gray500"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="11sp"
                    app:layout_constraintTop_toTopOf="@+id/profile_li_followers_static"
                    app:layout_constraintBottom_toBottomOf="@+id/profile_li_followers_static"
                    app:layout_constraintStart_toEndOf="@+id/profile_li_followers_static"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toStartOf="@+id/profile_li_answers_static"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@+id/profile_li_reputation_count"
                    app:layout_constraintStart_toStartOf="@+id/profile_li_answers_static"
                    app:layout_constraintEnd_toEndOf="@+id/profile_li_answers_static"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@string/_0"
                    android:textColor="@color/gray800"
                    android:id="@+id/profile_li_answers_count"/>
            <TextView
                    android:text="@string/answers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/profile_li_answers_static"
                    android:textSize="11sp"
                    android:textColor="@color/gray500"
                    android:fontFamily="@font/roboto_medium"
                    app:layout_constraintTop_toTopOf="@+id/profile_li_reputation_static"
                    app:layout_constraintBottom_toBottomOf="@+id/profile_li_reputation_static"
                    app:layout_constraintStart_toEndOf="@+id/profile_li_reputation_static"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toEndOf="parent"/>
            <View
                    android:id="@+id/divider5"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/gray100"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/profile_li_followers_static"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/profile_li_buttons_container"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/divider5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
            >


                <TextView
                        android:text="@string/shouts"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/profile_li_shouts_btn"
                        android:textStyle="bold"
                        android:textColor="@color/gray700"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintEnd_toStartOf="@+id/profile_li_questions_btn"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                <TextView
                        android:text="@string/questions"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/profile_li_questions_btn"
                        android:textStyle="bold"
                        android:textColor="@color/gray300"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center"
                        app:layout_constraintTop_toTopOf="@+id/profile_li_shouts_btn"
                        app:layout_constraintBottom_toBottomOf="@+id/profile_li_shouts_btn"
                        app:layout_constraintStart_toEndOf="@+id/profile_li_shouts_btn"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintEnd_toStartOf="@+id/profile_li_answers_btn"/>

                <TextView
                        android:text="@string/answers"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/profile_li_answers_btn"
                        android:textStyle="bold"
                        android:textColor="@color/gray300"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center"
                        app:layout_constraintTop_toTopOf="@+id/profile_li_questions_btn"
                        app:layout_constraintBottom_toBottomOf="@+id/profile_li_questions_btn"
                        app:layout_constraintStart_toEndOf="@+id/profile_li_questions_btn"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintEnd_toEndOf="parent"/>


            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/profile_li_buttons_container"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/profile_li_gallery_shouts"
                    android:layout_marginBottom="72dp"
                    android:visibility="visible"
                    android:layout_marginTop="32dp"/>
            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/profile_li_buttons_container"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/profile_li_gallery_questions"
                    android:layout_marginBottom="72dp"
                    android:visibility="gone"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:layout_marginTop="16dp">
            </androidx.recyclerview.widget.RecyclerView>

            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/profile_li_buttons_container"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/profile_li_gallery_answers"
                    android:layout_marginBottom="72dp"
                    android:visibility="gone"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:layout_marginTop="16dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>