<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <CheckBox
            tools:text="CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/public_contact_picker_checkbox"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            android:textColor="@color/gray800"
            android:fontFamily="@font/roboto"/>
    <TextView
            tools:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/public_contact_picker_info"
            app:layout_constraintTop_toTopOf="@+id/public_contact_picker_checkbox"
            app:layout_constraintBottom_toBottomOf="@+id/public_contact_picker_checkbox"
            app:layout_constraintStart_toEndOf="@+id/public_contact_picker_prefix"
            android:textColor="@color/gray800"
            android:fontFamily="@font/roboto"
            app:layout_constraintVertical_bias="0.517"/>
    <TextView
            tools:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/public_contact_picker_prefix"
            app:layout_constraintTop_toTopOf="@+id/public_contact_picker_checkbox"
            app:layout_constraintBottom_toBottomOf="@+id/public_contact_picker_checkbox"
            app:layout_constraintStart_toEndOf="@+id/public_contact_picker_checkbox"
            android:textColor="@color/gray800"
            android:fontFamily="@font/roboto"
            app:layout_constraintVertical_bias="0.517"/>
</androidx.constraintlayout.widget.ConstraintLayout>